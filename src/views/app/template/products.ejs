<main class="p-2">
    <div class="d-flex justify-content-center">
        <% c_results.forEach(function(category){ %>
            <a href="/filter/<%= category.id %>" class="btn btn-light border m-1"><%= category.category_name %></a>
        <% }) %>
    </div>
    <div class="d-flex justify-content-center m-auto w-100 row">
        <% products.forEach(function(product){ %>
            <div class="card m-1 w-50 col-lg-3">
                <img class="card-img-top w-75" width="300" height="200" src="<%= product.image %>" alt="">
                <div class="card-body">
                    <h4 class="card-title"><%= product.pr_name %></h4>
                    <p class="card-text"><%= product.price %></p>
                    <a id="" onclick="alert('Thêm vào giỏ hàng thành công!')" class="btn btn-primary" href="/addtocart/<%= product.id %>/<%= product.pr_name %>/<%= product.price %>" role="button">
                        Thêm vào giỏ hàng
                    </a>
                </div>
            </div>
        <% }) %>
    </div>
</main>